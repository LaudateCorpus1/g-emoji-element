{
  "name": "@github/g-emoji-element",
  "version": "0.1.1",
  "description": "Backports native emoji characters to browsers that don't support them by replacing the characters with fallback images.",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "license": "MIT",
  "repository": "github/g-emoji-element",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint index.js emoji-detection.js test/ && flow check",
    "prebuild": "npm run clean && npm run lint && mkdir dist",
    "build": "rollup -c",
    "pretest": "npm run build",
    "test": "karma start test/karma.config.js",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "babel-preset-github": "^3.0.0",
    "chai": "^4.2.0",
    "eslint": "^5.14.1",
    "eslint-plugin-github": "^1.10.0",
    "flow-bin": "^0.93.0",
    "karma": "^4.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^6.0.1",
    "rollup": "^1.2.3",
    "rollup-plugin-babel": "^4.3.2"
  },
  "eslintIgnore": [
    "dist/"
  ]
}
